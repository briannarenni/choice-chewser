{
  "manifest_version": 2,
  "name": "Choice Chewser",
  "version": "1.0",
  "description": "A simple coin flip & RNG popout extension",
  "icons": {
    "16": "favicon/favicon-16x16.png",
    "32": "favicon/favicon-32x32.png",
    "48": "favicon/favicon.ico"
  },
  "permissions": [
    "storage",
    "activeTab"
  ],
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "favicon/favicon-16x16.png",
      "32": "favicon/favicon-32x32.png",
      "48": "favicon/favicon.ico"
    }
  },
  "applications": {
    "gecko": {
      "strict_min_version": "57.0"
    }
  }
}
